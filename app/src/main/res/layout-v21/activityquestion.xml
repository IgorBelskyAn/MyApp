<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.igor.whowantwillbemillioner.QuestionActivity"
    android:background="@drawable/themeapp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:clipToPadding="false">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/txt1"
                android:gravity="center"
                android:textSize="40sp"
                android:text="@string/need"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/questionrect"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            >



            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="5dp">


                <Button
                    android:textSize="13sp"
                    android:elevation="20dp"
                    android:onClick="onStartClick"
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttoncorners"
                    android:text="@string/ans" />

                <Button
                    android:textSize="13sp"
                    android:elevation="20dp"
                    android:onClick="onStartClick"
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttoncorners"
                    android:text="@string/ans2" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttons2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="1dp">
                <Button
                    android:elevation="20dp"
                    android:onClick="onStartClick"
                    android:id="@+id/btn3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/buttoncorners"
                    android:text="@string/ans3"
                    android:textSize="13sp"/>
                <Button
                    android:textSize="13sp"
                    android:elevation="20dp"
                    android:onClick="onStartClick"
                    android:id="@+id/btn4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/buttoncorners"
                    android:text="@string/ans4"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
